<h1>Listing taggables</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>Taggable</th>
    <th>Taggable type</th>
  </tr>

<% for taggable in @taggables %>
  <tr>
    <td><%=h taggable.tag_id %></td>
    <td><%=h taggable.taggable_id %></td>
    <td><%=h taggable.taggable_type %></td>
    <td><%= link_to 'Show', taggable %></td>
    <td><%= link_to 'Edit', edit_taggable_path(taggable) %></td>
    <td><%= link_to 'Destroy', taggable, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New taggable', new_taggable_path %>
