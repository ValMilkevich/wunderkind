<h1>New link</h1>

<% form_for(@link) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :linkable_id %><br />
    <%= f.text_field :linkable_id %>
  </p>
  <p>
    <%= f.label :linkable_type %><br />
    <%= f.text_field :linkable_type %>
  </p>
  <p>
    <%= f.label :source %><br />
    <%= f.text_field :source %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', links_path %>
