<h1>Listing links</h1>

<table>
  <tr>
    <th>Linkable</th>
    <th>Linkable type</th>
    <th>Source</th>
    <th>Name</th>
  </tr>

<% for link in @links %>
  <tr>
    <td><%=h link.linkable_id %></td>
    <td><%=h link.linkable_type %></td>
    <td><%=h link.source %></td>
    <td><%=h link.name %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New link', new_link_path %>
